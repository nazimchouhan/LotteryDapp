<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery Smart Contract"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:background="#f0f0f0"
        android:padding="16dp" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Lottery (2 ETH)"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/getBalanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Contract Balance"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/selectWinnerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Winner (Manager Only)"
        android:textSize="18sp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: Make sure you have Sepolia ETH in your wallet to enter the lottery."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout> 